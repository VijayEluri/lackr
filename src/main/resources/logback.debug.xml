<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <appender name="rootLogger" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%-8r [%t] %-5p %c - %m%n</pattern>
    </encoder>
  </appender>
  <logger name="com.fotonauts" level="DEBUG"/>
  <root level="INFO">
    <appender-ref ref="rootLogger"/>
  </root>
</configuration>